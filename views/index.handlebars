<h1>Burgers</h1>
<img id="burgerImg" src="/assets/img/burger.png">
<div id="notDevoured">
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
     <li>{{burger_name}}</li> 
        <button id="devouredBtn" class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">Devour!
        </button>
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div id="devoured">
  <ul>
    {{#each burgers}}
    {{#if devoured}}
     <li>{{burger_name}}</li> 
    {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>
  <button id="addBtn" type="submit">Add Burger</button>
</form>